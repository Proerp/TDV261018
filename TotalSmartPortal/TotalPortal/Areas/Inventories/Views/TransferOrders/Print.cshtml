@using MvcReportViewer;
@model TotalPortal.ViewModels.Helpers.PrintViewModel

@Html.MvcReportViewerFluent("/" + @Model.ReportFolder + "/" + @Model.ReportPath).ReportParameters(new { Id = @Model.Id, CurrentHost = HttpContext.Current.Request.Url.Host }).Attributes(new { Height = 1100, Width = 1150, style = "border: none" }).ControlSettings(new ControlSettings() { ShowPrintButton = @Model.PrintOptionID == 1, ShowExportControls = @Model.PrintOptionID == 1, ShowParameterPrompts = false })