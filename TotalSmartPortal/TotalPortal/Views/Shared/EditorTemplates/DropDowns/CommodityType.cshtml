@model TotalPortal.Areas.Commons.ViewModels.Helpers.ICommodityTypeDropDownViewModel

<div class="form-group">
    @Html.LabelFor(model => model.CommodityTypeID)
    <div class="div-input">
        @Html.Kendo().DropDownListFor(m => m.CommodityTypeID).BindTo(Model.CommodityTypeSelectList).HtmlAttributes((ViewData["CommodityTypeReadonly"] != null && (bool)ViewData["CommodityTypeReadonly"] == true ? (object)new { @class = "left-panel-input", @readonly = "readonly" } : (object)new { @class = "left-panel-input" }))
    </div>
    <div class="div-validation-message">
        @Html.ValidationMessageFor(model => model.CommodityTypeID, "", new { @class = "text-danger" })
    </div>
</div>

