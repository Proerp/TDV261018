@model TotalPortal.Areas.Commons.ViewModels.Helpers.ICommodityCategoryDropDownViewModel

<div class="form-group">
    @Html.LabelFor(model => model.CommodityCategoryID)
    <div class="div-input">
        @Html.Kendo().DropDownListFor(m => m.CommodityCategoryID).BindTo(Model.CommodityCategorySelectList).HtmlAttributes((ViewData["CommodityCategoryReadonly"] != null && (bool)ViewData["CommodityCategoryReadonly"] == true ? (object)new { @class = "left-panel-input", @readonly = "readonly" } : (object)new { @class = "left-panel-input" }))
    </div>
    <div class="div-validation-message">
        @Html.ValidationMessageFor(model => model.CommodityCategoryID, "", new { @class = "text-danger" })
    </div>
</div>

