@model TotalPortal.Areas.Commons.ViewModels.Helpers.ICommodityLineDropDownViewModel

<div class="form-group">
    @Html.LabelFor(model => model.CommodityLineID)
    <div class="div-input">
        @Html.Kendo().DropDownListFor(m => m.CommodityLineID).BindTo(Model.CommodityLineSelectList).HtmlAttributes((ViewData["CommodityLineReadonly"] != null && (bool)ViewData["CommodityLineReadonly"] == true ? (object)new { @class = "left-panel-input", @readonly = "readonly" } : (object)new { @class = "left-panel-input" }))
    </div>
    <div class="div-validation-message">
        @Html.ValidationMessageFor(model => model.CommodityLineID, "", new { @class = "text-danger" })
    </div>
</div>

