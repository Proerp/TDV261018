@model TotalPortal.Areas.Commons.ViewModels.Helpers.IShiftDropDownViewModel

<div class="form-group">
    @Html.LabelFor(model => model.ShiftID)
    <div class="div-input">
        @Html.Kendo().DropDownListFor(m => m.ShiftID).BindTo(Model.ShiftSelectList).HtmlAttributes((ViewData["ShiftReadonly"] != null && (bool)ViewData["ShiftReadonly"] == true ? (object)new { @class = "left-panel-input", @readonly = "readonly" } : (object)new { @class = "left-panel-input" }))
    </div>
    <div class="div-validation-message">
        @Html.ValidationMessageFor(model => model.ShiftID, "", new { @class = "text-danger" })
    </div>
</div>

